class ThreadSleep extends Thread{
	public static void main(String[] args) {
		ThreadSleep ref=new ThreadSleep();
		ref.start();
	}
	public void run(){
		for(int i=0;i<5;i++){
			
			System.out.print(i);
			System.out.print("\r");
			try{
				Thread.sleep(2000);

			}catch(Exception e){
				System.out.println(e);

			}
		}
		
	}
	
}
